<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="#232324">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="ON"
                    android:id="@+id/btnVkOn"
                    android:layout_column="0"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="OFF"
                    android:id="@+id/btnVkOff"
                    android:layout_column="3"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:id="@+id/btnVk1"
                    android:layout_column="0"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2"
                    android:id="@+id/btnVk2"
                    android:layout_column="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="3"
                    android:id="@+id/btnVk3"
                    android:layout_column="2"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="4"
                    android:id="@+id/btnVk4"
                    android:layout_column="3"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:id="@+id/btnVk5"
                    android:layout_column="0"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="6"
                    android:id="@+id/btnVk6"
                    android:layout_column="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="7"
                    android:id="@+id/btnVk7"
                    android:layout_column="2"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="8"
                    android:id="@+id/btnVk8"
                    android:layout_column="3"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S-Wall"
                    android:id="@+id/btnVkSwall"
                    android:layout_column="0"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="9"
                    android:id="@+id/btnVk9"
                    android:layout_column="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0"
                    android:id="@+id/btnVk0"
                    android:layout_column="2"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="F-Wall"
                    android:id="@+id/btnVkFwall"
                    android:layout_column="3"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <RelativeLayout android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Sour."
                android:id="@+id/btnVkSource"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:id="@+id/btnVkID"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/btnVkSource"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="UP"
                android:id="@+id/btnVkUp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnVkSource"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="ENTER"
                android:id="@+id/btnVkEnter"
                android:layout_below="@+id/btnVkUp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="LEFT"
                android:id="@+id/btnVkLeft"
                android:layout_below="@+id/btnVkUp"
                android:layout_toLeftOf="@+id/btnVkEnter"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="RIGHT"
                android:id="@+id/btnVkRight"
                android:layout_below="@+id/btnVkUp"
                android:layout_toRightOf="@+id/btnVkEnter"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="DOWN"
                android:id="@+id/btnVkDown"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnVkEnter"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:id="@+id/btnVkMenu"
                android:layout_below="@+id/btnVkDown"
                android:layout_alignParentLeft = "true"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="EXIT"
                android:layout_below="@+id/btnVkDown"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_style"
                android:textColor="@color/white" />

        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAY"
                    android:id="@+id/btnVkPlay"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAUSE"
                    android:id="@+id/btnVkPause"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STOP"
                    android:id="@+id/btnVkStop"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFO."
                    android:id="@+id/btnVkInfo"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AV"
                    android:id="@+id/button29"
                    android:layout_column="0"
                    android:layout_weight="1" />

                Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VGA"
                    android:id="@+id/button31"
                    android:layout_column="1"
                    android:layout_weight="1" />

                Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDMI"
                    android:id="@+id/button33"
                    android:layout_column="2"
                    android:layout_weight="1" />

                Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DVI"
                    android:id="@+id/button35"
                    android:layout_column="3"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
