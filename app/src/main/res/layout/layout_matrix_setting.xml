<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:text="矩阵类型:"/>

        <Spinner
            android:id="@+id/spinner_matrix_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:entries="@array/matrix_category"
            android:prompt="@string/spRs"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:entries="@array/matrix_fac"
            android:text="矩阵厂家:"/>

        <Spinner
            android:id="@+id/spinner_matrix_factory"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:entries="@array/matrix_fac"
            android:prompt="@string/spRs"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_matrix_stream"
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:entries="@array/matrix_fac"
            android:text="输出通道:"/>

        <com.hc.wallcontrl.view.DropEditText
            android:id="@+id/dropetv_matrix_stream"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="通道1"
            android:textColor="@color/released"
            android:textSize="25dp"/>
        <!--android:gravity="center"-->
        <!--android:background="@null"-->
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:entries="@array/matrix_fac"
            android:text="输入名称:"/>

        <com.hc.wallcontrl.view.DropEditText
            android:id="@+id/dropetv_matrix_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="矩阵输入1"
            android:maxLines="1"
            android:textColor="@color/released"
            android:textSize="25dp"/>
        <!--android:gravity="center"-->
        <!--android:background="@null"-->
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:text="输入总数:"/>

        <EditText
            android:id="@+id/etv_input_quantity"
            style="@style/DialogEditText"
            android:text="0"/>

        <TextView
            style="@style/SpinnerInfoTextView"
            android:text="个"/>
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLin">

        <TextView
            style="@style/MatrixInfoTextView"
            android:text="命令延时:"/>

        <EditText
            android:id="@+id/etv_delay_time"
            style="@style/DialogEditText"
            android:text="0"/>

        <TextView
            style="@style/SpinnerInfoTextView"
            android:text="ms"/>
    </LinearLayout>



    <LinearLayout
        style="@style/SpinnerLin"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/MatrixInfoTextView"
            android:text="设备地址:"/>

        <EditText
            android:id="@+id/etv_addr"
            style="@style/DialogEditText"
            android:text="0"/>

    </LinearLayout>
    <LinearLayout
        style="@style/SpinnerLin">

        <Button
            android:id="@+id/btn_set_matrix"
            style="@style/DialogButton"
            android:text="设置"/>
    </LinearLayout>

</LinearLayout>